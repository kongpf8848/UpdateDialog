<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/version_container"
        android:background="@drawable/bg_update_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg_update_dialog_top"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
           >

            <TextView
                android:textSize="18sp"
                android:textColor="@color/black"
                android:id="@+id/version_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="发现新版本" />

            <TextView
                android:textSize="14sp"
                android:textColor="#999999"
                android:id="@+id/version_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="V6.5.7"
                />
        </LinearLayout>

        <TextView
            android:textSize="14sp"
            android:textColor="@color/black"
            android:id="@+id/version_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:text="1.体验优化及bugfix"
         />

        <TextView
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_upgrade"
            android:background="@drawable/bg_update_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:text="立即升级"
          />
    </LinearLayout>

    <ImageView
        android:layout_width="255dp"
        android:layout_height="124dp"
        android:layout_marginTop="-20dp"
        android:src="@drawable/bg_update_dialog_mask"
        android:layout_alignTop="@id/version_container"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:src="@mipmap/ic_update_dialog_close"
        android:layout_below="@id/version_container"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
